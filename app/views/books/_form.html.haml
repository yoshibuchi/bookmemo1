= form_with model: @book, local: true, class: "toppage" do |f|
  .toppage__form
    .toppage__form__text
      読み終えた本を入力しよう！
    .toppage__form__content
      %label.toppage__form__content__form-label{for: "title"} 本のタイトル
      %span.toppage__form__content__require 必須
      = f.text_field(:title, class: "toppage__form__content__input-default", placeholder: "本のタイトルを入力してください")
    .toppage__form__content1
      %label.toppage__form__content1__form-label{for: "author"} 著者名
      %span.toppage__form__content1__require 必須
      = f.text_field(:author, class: "toppage__form__content1__input-default", placeholder: "著者名を入力してください")
    .toppage__form__submit
      = f.submit class: 'toppage__form__submit__field-btn', value:'入力する'